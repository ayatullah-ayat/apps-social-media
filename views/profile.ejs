<%- include( 'includes/header-template' ) %>




<div class="container py-md-5 container--narrow">
  <%- include( 'includes/flash-message' ) %>
  
  <%- include( 'includes/sharedProfile' ) %>
    <div class="list-group">
      <% posts.forEach((post) => { %>
        <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%= profileAvatar %>">
          <strong><%= post.title %></strong> on <%= post.createDate.getDate() %>/<%= post.createDate.getMonth()+1 %>/<%= post.createDate.getFullYear() %>
        </a>
      <% }) %>
    </div>
  </div>

  <%- include( 'includes/footer-template' ) %>
